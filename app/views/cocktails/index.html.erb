<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Cocktails</h1>
      <p>
        <i class="fas fa-plus"></i>
        <%= link_to "Add new cocktail", new_cocktail_path %>
      </p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card" style="background-image:linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url('https://source.unsplash.com/featured/?<%= cocktail.name %>');">
            <h3>
              <%= cocktail.name %>
            </h3>
            <ul>
              <% cocktail.doses.each do |dose| %>
              <li><%= dose.description %> <%= dose.ingredient.name %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      </div>
    <% end %>
  </div>
</div>
